---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Diseño Responsive Perfecto",
    description:
      "Se adapta automáticamente a cualquier dispositivo para máxima conversión.",
  },
  {
    title: "SEO Optimizado",
    description:
      "Código limpio y estructura optimizada para posicionamiento en buscadores.",
  },
  {
    title: "Carga Ultra Rápida",
    description:
      "Optimizado para velocidad máxima, mejorando la experiencia del usuario.",
  },
  {
    title: "Fácil Personalización",
    description:
      "Modifica colores, fuentes y contenido sin conocimientos técnicos.",
  },
  {
    title: "Analytics Integrados",
    description:
      "Seguimiento completo de conversiones y comportamiento de usuarios.",
  },
  {
    title: "Formularios Optimizados",
    description:
      "Formularios diseñados científicamente para maximizar conversiones.",
  },
  {
    title: "Soporte Premium",
    description:
      "Documentación completa y asistencia técnica especializada.",
  },
  {
    title: "Actualizaciones Gratuitas",
    description:
      "Mejoras constantes y nuevas funcionalidades sin costo adicional.",
  },
  {
    title: "Compatible Todos los CMS",
    description:
      "Funciona perfectamente con WordPress, Shopify, y más plataformas.",
  },
  {
    title: "Código Limpio",
    description:
      "Desarrollado con las mejores prácticas y estándares modernos.",
  },
  {
    title: "Elementos Persuasivos",
    description:
      "Testimonios, garantías y pruebas sociales integradas estratégicamente.",
  },
  {
    title: "ROI Comprobado",
    description:
      "Template probado en cientos de negocios con resultados medibles.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Incluye <GradiantText>Funcionalidades <br />Premium</GradiantText> que
        Maximizan Conversiones
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
